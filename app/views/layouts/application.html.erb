<!DOCTYPE html>
<html>
<head>
  <title>Undercurrents</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
<% if logged_in? %>
	logged in as <%= current_user.login %> <a href="/logout">log out</a><br />
<% else %>
	not logged in <a href="/login">login</a>
<% end %>

<%= yield %>

</body>
</html>
